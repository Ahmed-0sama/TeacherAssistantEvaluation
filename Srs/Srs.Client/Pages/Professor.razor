@page "/professor"
@using Shared.Dtos
@using Shared.Dtos.EvaluationPeriod
@using Shared.Dtos.ProfessorEvaluationDto
@inject HttpClient Http
@inject IJSRuntime JS
@rendermode InteractiveWebAssembly

<HeadContent>
    <link href="./Custom-Rtl.css" rel="stylesheet" />
</HeadContent>

<h3 class="text-center mb-4">تقييم استاذ المقرر</h3>
@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert" dir="rtl">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <strong>تنبيه:</strong> @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
    </div>
}
<div class="d-flex flex-column justify-content-center align-items-center vh-80">
    <div class="w-75 mb-4 shadow-sm">
        @if (isLoading)
        {
            <div class="text-center p-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">جارٍ تحميل البيانات...</span>
                </div>
                <p class="mt-3">جارٍ تحميل البيانات...</p>
            </div>
        }
        else if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">
                @errorMessage
                <button class="btn btn-sm btn-primary mt-2" @onclick="LoadData">إعادة المحاولة</button>
            </div>
        }
        else if (!evaluationsList.Any())
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle me-2"></i>
                لا توجد تقييمات متاحة حالياً
            </div>
        }
        else
        {
            <div class="position-fixed top-0 start-0 m-3" style="z-index: 1050;">
                <Srs.Client.Compontets.NotificationComponent EmployeeId="@currentProfessorId.ToString()" />
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-striped" dir="rtl">
                    <thead class="table-secondary">
                        <tr>
                            <th>اسم مساعد التدريس</th>
                            <th>المقرر</th>
                            <th>النتيجة</th>
                            <th>الحالة</th>
                            <th>إجراء</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var eval in evaluationsList)
                        {
                            <tr>
                                <td>@eval.TAName</td>
                                <td>@eval.CourseName.Trim()</td>
                                <td>
                                    @if (eval.ProfessorEvaluationTotal.HasValue)
                                    {
                                        <span class="badge bg-success">
                                            @eval.ProfessorEvaluationTotal/30
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            لم يتم التقييم
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (eval.StatusId == 0)
                                    {
                                        <span class="badge bg-warning text-dark">بانتظار التقييم</span>
                                    }
                                    else if (eval.StatusId == 2)
                                    {
                                        <span class="badge bg-success">تم التقييم</span>
                                    }
                                    else if (eval.StatusId == 4)
                                    {
                                        <span class="badge bg-danger">تم الإرجاع من رئيس القسم</span>
                                    }
                                </td>
                                <td>
                                    @if (eval.StatusId == 0)
                                    {
                                        <button type="button"
                                                class="btn btn-sm btn-primary"
                                                @onclick="() => OpenModal(eval)">
                                            <i class="bi bi-pencil-square me-1"></i>
                                            تقييم
                                        </button>
                                    }
                                    else if (eval.StatusId == 4 || eval.StatusId == 7)
                                    {
                                        <button type="button"
                                                class="btn btn-sm btn-warning"
                                                @onclick="() => OpenModal(eval)">
                                            <i class="bi bi-arrow-clockwise me-1"></i>
                                            تعديل التقييم
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button"
                                                class="btn btn-sm btn-info"
                                                @onclick="() => OpenModal(eval)">
                                            <i class="bi bi-eye me-1"></i>
                                            عرض التقييم
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Modal Component -->
@if (isModalVisible && selectedEvaluation != null)
{
    <div class="modal-overlay" @onclick="HideModal">
        <div class="modal-container" @onclick:stopPropagation="true" style="max-width: 700px;">
            <div class="modal-header">
                <h5 class="m-0">تقييم استاذ المقرر</h5>
                <button type="button" class="btn-close btn-close-white" @onclick="HideModal" aria-label="Close"></button>
            </div>

            @if ((selectedEvaluation.StatusId == 4 || selectedEvaluation.StatusId == 7) && !string.IsNullOrEmpty(ReturnComment))
            {
                <div class="alert alert-warning border-warning shadow-sm m-3" role="alert">
                    <div class="d-flex align-items-start">
                        <i class="bi bi-arrow-return-right fs-4 me-3 text-warning"></i>
                        <div class="flex-grow-1">
                            <h6 class="alert-heading fw-bold mb-2">
                                @if (selectedEvaluation.StatusId == 4)
                                {
                                    <text>تم الإرجاع من رئيس القسم</text>
                                }
                                else
                                {
                                    <text>تم الإرجاع من العميد</text>
                                }
                            </h6>
                            <p class="mb-0 text-dark">@ReturnComment</p>
                        </div>
                    </div>
                </div>
            }

            <div class="modal-body">
                <div class="info-section mb-4">
                    <div class="row g-3">
                        <div class="col-6">
                            <p class="mb-2"><strong>اسم المساعد:</strong> @selectedEvaluation.TAName</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>الرقم الوظيفي:</strong> @selectedEvaluation.TAEmployeeId</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>المقرر:</strong> @selectedEvaluation.CourseName</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>كود المقرر:</strong> @selectedEvaluation.CourseCode</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>كود الفصل:</strong> @selectedEvaluation.semesterCode</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>الفصل الدراسي:</strong> @selectedEvaluation.SemesterName</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>الفترة:</strong> @selectedEvaluation.PeriodName</p>
                        </div>
                    </div>
                </div>

                <hr class="my-3" />

                <div class="grades-section">
                    <!-- Grade 1: Office Hours -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="fw-bold mb-2">الالتزام بالساعات المكتبية</h6>
                            <small class="text-muted d-block mb-2">(من 0 إلى 10)</small>
                            <input type="number"
                                   class="form-control @(validationErrors.ContainsKey("officeHours") ? "is-invalid" : "")"
                                   @bind="currentProfEval.OfficeHoursScore"
                                   @bind:event="oninput"
                                   @onblur="ValidateOfficeHours"
                                   min="0"
                                   max="10"
                                   readonly="@isReadOnly" />
                            @if (validationErrors.ContainsKey("officeHours"))
                            {
                                <div class="invalid-feedback">@validationErrors["officeHours"]</div>
                            }
                        </div>
                    </div>

                    <!-- Grade 2: Attendance -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="fw-bold mb-2">تدوين ورصد الغياب</h6>
                            <small class="text-muted d-block mb-2">(من 0 إلى 5)</small>
                            <input type="number"
                                   class="form-control @(validationErrors.ContainsKey("attendance") ? "is-invalid" : "")"
                                   @bind="currentProfEval.AttendanceScore"
                                   @bind:event="oninput"
                                   @onblur="ValidateAttendance"
                                   min="0"
                                   max="5"
                                   readonly="@isReadOnly" />
                            @if (validationErrors.ContainsKey("attendance"))
                            {
                                <div class="invalid-feedback">@validationErrors["attendance"]</div>
                            }
                        </div>
                    </div>

                    <!-- Grade 3: Performance -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="fw-bold mb-2">الأداء التدريبي في المقرر</h6>
                            <small class="text-muted d-block mb-2">(من 0 إلى 15)</small>
                            <input type="number"
                                   class="form-control @(validationErrors.ContainsKey("performance") ? "is-invalid" : "")"
                                   @bind="currentProfEval.PerformanceScore"
                                   @bind:event="oninput"
                                   @onblur="ValidatePerformance"
                                   min="0"
                                   max="15"
                                   readonly="@isReadOnly" />
                            @if (validationErrors.ContainsKey("performance"))
                            {
                                <div class="invalid-feedback">@validationErrors["performance"]</div>
                            }
                        </div>
                    </div>

                    <!-- Comments -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <label class="form-label fw-bold">ملاحظات إضافية (اختياري)</label>
                            <textarea class="form-control"
                                      @bind="currentProfEval.Comments"
                                      rows="3"
                                      placeholder="أضف أي ملاحظات إضافية..."
                                      readonly="@isReadOnly"></textarea>
                        </div>
                    </div>

                    <!-- Total -->
                    <div class="alert alert-primary text-center mt-4 py-3">
                        <div class="d-flex justify-content-center align-items-center gap-3">
                            <span class="fs-5 fw-bold">المجموع الكلي:</span>
                            <span class="fs-2 fw-bold text-primary">@Total</span>
                            <span class="fs-5 text-muted">/ 30</span>
                        </div>
                    </div>

                    @if (validationErrors.Any())
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            يرجى تصحيح الأخطاء قبل الحفظ
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(saveMessage))
                    {
                        <div class="alert @(saveSuccess ? "alert-success" : "alert-danger") mt-3">
                            @saveMessage
                        </div>
                    }
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary px-4" @onclick="HideModal">
                    <i class="bi bi-x-circle me-2"></i>إلغاء
                </button>
                @if (!isReadOnly)
                {
                    <button type="button"
                            class="btn btn-success px-4"
                            @onclick="SaveEvaluation"
                            disabled="@(validationErrors.Any() || isSaving)">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="bi bi-check-circle me-2"></i>@(selectedEvaluation.IsEvaluated ? "تحديث التقييم" : "حفظ التقييم")
                    </button>
                }
            </div>
        </div>
    </div>
}

@code {
    private List<TAEvaluationViewModelDto> evaluationsList = new();
    private TAEvaluationViewModelDto? selectedEvaluation;
    private ProfessorEvaluationResponseDto currentProfEval = new();
    private string ReturnComment = string.Empty;
    private bool isLoading = true;
    private bool isModalVisible = false;
    private bool isReadOnly = false;
    private bool isSaving = false;
    private bool saveSuccess = false;

    private string? errorMessage;
    private string? saveMessage;
    private Dictionary<string, string> validationErrors = new();

    // TODO: Replace with actual logged-in professor ID from authentication
    private int currentProfessorId = 7150;

    private int evaluationperiodid;

    private int Total => currentProfEval.OfficeHoursScore +
                         currentProfEval.AttendanceScore +
                         currentProfEval.PerformanceScore;

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine($"HttpClient BaseAddress: {Http.BaseAddress}");
        await GetEvaluationPeriod();
        await LoadData();
    }

    private async Task GetEvaluationPeriod()
    {
        try
        {
            var response = await Http.GetAsync($"api/EvaluationPeriod/GetActiveEvaluationPeriod");

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<GetEvaluationPeriodDto>();

                if (result != null && result.PeriodId > 0)
                {
                    evaluationperiodid = result.PeriodId;
                    Console.WriteLine($" evaluationPeriod retrieved: {evaluationperiodid}");
                    errorMessage = null; // Clear any previous error
                }
                else
                {
                    errorMessage = "لا توجد فترة تقييم نشطة حالياً";
                    Console.WriteLine("No active evaluation period found");
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                errorMessage = "لا توجد فترة تقييم نشطة حالياً";
                Console.WriteLine(" No active evaluation period (404)");
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();

                if (errorContent.Contains("No active evaluation period", StringComparison.OrdinalIgnoreCase))
                {
                    errorMessage = "لا توجد فترة تقييم نشطة حالياً";
                }
                else
                {
                    errorMessage = $"خطأ في تحميل فترة التقييم: {errorContent}";
                }

                Console.WriteLine($" Error getting evaluation period: {errorContent}");
            }
        }
        catch (Exception ex)
        {
            errorMessage = "لا توجد فترة تقييم نشطة حالياً";
            Console.WriteLine($" Exception getting evaluation period: {ex.Message}");
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        evaluationsList.Clear();

        try
        {
            Console.WriteLine("=== Starting LoadData ===");

            if (evaluationperiodid <= 0)
            {
                Console.WriteLine("⚠️ No active evaluation period, skipping data load");
                // Don't clear errorMessage - keep the message from GetEvaluationPeriod
                return;
            }

            // Clear any previous errors if we have a valid period
            errorMessage = null;

            await LoadDataFromApi();
            Console.WriteLine($"=== LoadData completed. Found {evaluationsList.Count} evaluations ===");
        }
        catch (Exception ex)
        {
            errorMessage = $"فشل تحميل البيانات: {ex.Message}";
            Console.WriteLine($"❌ Error in LoadData: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task LoadDataFromApi()
    {
        try
        {
            Console.WriteLine($"Loading data for professor {currentProfessorId} and period {evaluationperiodid}...");

            var response = await Http.GetAsync(
                $"api/ProfessorEvaluation/GetCoursesWithEvaluations?professorId={currentProfessorId}&evaluationPeriodId={evaluationperiodid}&StartDate=2025-01-01&EndDate=2025-12-31");

            if (!response.IsSuccessStatusCode)
            {
                var error = await response.Content.ReadAsStringAsync();
                throw new Exception($"Failed to load data: {error}");
            }

            var professorData = await response.Content.ReadFromJsonAsync<ProfessorDataResponseDto>();

            if (professorData == null || !professorData.Courses.Any())
            {
                Console.WriteLine("⚠️ No courses found for this professor");
                return;
            }

            Console.WriteLine($"✅ Loaded {professorData.Courses.Count} courses");

            //  NO SECOND API CALL - Just use the enriched data directly
            foreach (var course in professorData.Courses)
            {
                foreach (var ta in course.GTAs)
                {
                    //  Get status directly from backend enrichment
                    int statusId = ta.IsEvaluated ? (ta.Evaluation?.StatusId ?? 0) : 0;

                    Console.WriteLine($"🔍 TA {ta.employeeId}: IsEvaluated={ta.IsEvaluated}, StatusId from backend={ta.Evaluation?.StatusId}, Final StatusId={statusId}");

                    var viewModel = new TAEvaluationViewModelDto
                    {
                        EvaluationId = 0,
                        ProfEvalId = ta.Evaluation?.ProfEvalId,
                        EvaluationPeriodId = evaluationperiodid,
                        TAEmployeeId = ta.employeeId,
                        PeriodId = evaluationperiodid,
                        PeriodName = ta.Evaluation?.PeriodName ?? "فترة التقييم الحالية",
                        
                        //  Use status directly from backend
                        StatusId = statusId,
                        StatusName = GetStatusName(statusId),
                        CanEdit = CanEditEvaluation(statusId),
                        semesterCode = professorData.SemesterCode,
                        // Course and TA info
                        SemesterName = $"Semester {professorData.SemesterNumber} - {professorData.SemesterYear}",
                        TAName = ta.employeeName?.Trim() ?? "",
                        CourseCode = course.CourseCode?.Trim() ?? "",
                        CourseName = course.CourseName?.Trim() ?? "",
                        NumberOfClasses = course.TeachingHours > 0 ? course.TeachingHours : 12,

                        //  Evaluation data
                        ReturnComments = ta.Evaluation?.HodReturnComment,
                        ProfessorEvaluationTotal = ta.Evaluation?.TotalScore,
                        IsEvaluated = ta.IsEvaluated
                    };

                    evaluationsList.Add(viewModel);
                    Console.WriteLine($"✅ Added: {viewModel.TAName} - StatusId: {viewModel.StatusId} - Status: {viewModel.StatusName} - IsEvaluated: {ta.IsEvaluated}");
                }
            }

            Console.WriteLine($" Total view models created: {evaluationsList.Count}");
        }
        catch (HttpRequestException httpEx)
        {
            Console.WriteLine($" HTTP Error: {httpEx.Message}");
            throw new Exception($"خطأ في الاتصال بالخادم: {httpEx.Message}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($" Unexpected error: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            throw;
        }
    }

    private void OpenModal(TAEvaluationViewModelDto eval)
    {
        Console.WriteLine($"Opening modal for TA: {eval.TAName} - Course: {eval.CourseName}");

        selectedEvaluation = eval;
        validationErrors.Clear();
        saveMessage = null;

        // Determine read-only based on status
        isReadOnly = !eval.CanEdit;

        // Load return comments if returned
        if (eval.StatusId == 4 || eval.StatusId == 7)
        {
            ReturnComment = eval.ReturnComments ?? "لا توجد ملاحظات";
        }

        if (eval.IsEvaluated && eval.ProfEvalId.HasValue)
        {
            Console.WriteLine($"Loading existing evaluation with ID: {eval.ProfEvalId}");
            LoadExistingEvaluationAsync(eval);
        }
        else
        {
            Console.WriteLine("Creating new evaluation");
            // New evaluation with actual course data from LMS
            currentProfEval = new ProfessorEvaluationResponseDto
            {
                SemesterCode = eval.semesterCode,
                EvaluationPeriodId = eval.EvaluationPeriodId,
                TaEmployeeId = eval.TAEmployeeId,
                ProfessorEmployeeId = currentProfessorId,
                CourseCode = eval.CourseCode,      
                CourseName = eval.CourseName,    
                SemesterName = eval.SemesterName,
                OfficeHoursScore = 0,
                AttendanceScore = 0,
                PerformanceScore = 0,
                Comments = "",
                StatusId = eval.StatusId,
                HodReturnComment = eval.ReturnComments
            };
        }

        isModalVisible = true;
        StateHasChanged();
    }

    private async void LoadExistingEvaluationAsync(TAEvaluationViewModelDto eval)
    {
        try
        {
            Console.WriteLine($"Fetching evaluation from API: /api/ProfessorEvaluation/GetProfessorEvaluationById/{eval.ProfEvalId}");

            var response = await Http.GetAsync($"api/ProfessorEvaluation/GetProfessorEvaluationById/{eval.ProfEvalId}");

            if (response.IsSuccessStatusCode)
            {
                var profEvalDetail = await response.Content.ReadFromJsonAsync<ProfessorEvaluationResponseDto>();

                if (profEvalDetail != null)
                {
                    currentProfEval = profEvalDetail;

                    // Load ReturnComment from API if status is 4 or 7
                    if ((profEvalDetail.StatusId == 4 || profEvalDetail.StatusId == 7)
                        && !string.IsNullOrEmpty(profEvalDetail.HodReturnComment))
                    {
                        ReturnComment = profEvalDetail.HodReturnComment;
                        Console.WriteLine($" Loaded ReturnComment from API: {ReturnComment}");
                    }

                    Console.WriteLine($" Loaded existing evaluation successfully");
                }
                else
                {
                    Console.WriteLine(" Evaluation data is null");
                }
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                Console.WriteLine($" Failed to load evaluation: {response.StatusCode} - {error}");
            }

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($" Error loading evaluation: {ex.Message}");
            StateHasChanged();
        }
    }

    private int DetermineStatus(bool hasSubmittedEvaluation, bool hasProfEval, ProfessorEvaluationResponseDto? profEval)
    {
        // If TA hasn't submitted their evaluation yet
        if (!hasSubmittedEvaluation)
            return 0;

        // Status 4: Returned by HOD for re-evaluation
        if (hasProfEval && profEval?.StatusId == 4)  
            return 4;

        // Status 1: Evaluated and submitted to HOD
        if (hasProfEval && profEval?.StatusId == 2)  
            return 2;

        // Default: Waiting for professor evaluation (TA submitted, professor hasn't evaluated yet)
        return 1;
    }

    private string GetStatusName(int statusId)
    {
        return statusId switch
        {
            0 => "بانتظار التقييم",
            2 => "تم التقييم",
            4 => "مرتجع من رئيس القسم",
            _ => "غير معروف"
        };
    }

    private bool CanEditEvaluation(int statusId)
    {
        // Can edit if: not yet evaluated (1) OR returned for re-evaluation (4 or 7)
        return statusId == 0 || statusId == 4 || statusId == 7;
    }

    private void HideModal()
    {
        isModalVisible = false;
        selectedEvaluation = null;
        validationErrors.Clear();
        saveMessage = null;
        ReturnComment = string.Empty;
        StateHasChanged();
    }

    private void ValidateOfficeHours()
    {
        validationErrors.Remove("officeHours");
        if (currentProfEval.OfficeHoursScore < 0)
        {
            currentProfEval.OfficeHoursScore = 0;
            validationErrors["officeHours"] = "الدرجة لا يمكن أن تكون سالبة";
        }
        else if (currentProfEval.OfficeHoursScore > 10)
        {
            currentProfEval.OfficeHoursScore = 10;
            validationErrors["officeHours"] = "الحد الأقصى للدرجة هو 10";
        }
        StateHasChanged();
    }

    private void ValidateAttendance()
    {
        validationErrors.Remove("attendance");
        if (currentProfEval.AttendanceScore < 0)
        {
            currentProfEval.AttendanceScore = 0;
            validationErrors["attendance"] = "الدرجة لا يمكن أن تكون سالبة";
        }
        else if (currentProfEval.AttendanceScore > 5)
        {
            currentProfEval.AttendanceScore = 5;
            validationErrors["attendance"] = "الحد الأقصى للدرجة هو 5";
        }
        StateHasChanged();
    }

    private void ValidatePerformance()
    {
        validationErrors.Remove("performance");
        if (currentProfEval.PerformanceScore < 0)
        {
            currentProfEval.PerformanceScore = 0;
            validationErrors["performance"] = "الدرجة لا يمكن أن تكون سالبة";
        }
        else if (currentProfEval.PerformanceScore > 15)
        {
            currentProfEval.PerformanceScore = 15;
            validationErrors["performance"] = "الحد الأقصى للدرجة هو 15";
        }
        StateHasChanged();
    }

    private void ValidateAllFields()
    {
        ValidateOfficeHours();
        ValidateAttendance();
        ValidatePerformance();
    }

    private async Task SaveEvaluation()
    {
        ValidateAllFields();

        if (validationErrors.Any())
        {
            saveMessage = "يرجى تصحيح الأخطاء قبل الحفظ";
            saveSuccess = false;
            return;
        }

        isSaving = true;
        saveMessage = null;

        try
        {
            if (selectedEvaluation!.IsEvaluated && currentProfEval.ProfEvalId > 0)
            {
                Console.WriteLine($"Updating evaluation {currentProfEval.ProfEvalId}");

                // Update existing evaluation
                var updateDto = new UpdateProfessorEvaluationDto
                {
                    EvalId = selectedEvaluation.EvaluationId ?? 0,
                    CourseCode = currentProfEval.CourseCode,
                    SemesterName = currentProfEval.SemesterName,
                    SemesterCode = currentProfEval.SemesterCode,
                    CourseName = currentProfEval.CourseName,
                    OfficeHoursScore = currentProfEval.OfficeHoursScore,
                    AttendanceScore = currentProfEval.AttendanceScore,
                    PerformanceScore = currentProfEval.PerformanceScore,
                    Comments = currentProfEval.Comments
                };

                var response = await Http.PutAsJsonAsync(
                    $"api/ProfessorEvaluation/UpdateEvaluation/{currentProfEval.ProfEvalId}",
                    updateDto);

                if (response.IsSuccessStatusCode)
                {
                    saveMessage = "تم تحديث التقييم بنجاح";
                    saveSuccess = true;
                    Console.WriteLine(" Update successful");
                }
                else
                {
                    var error = await response.Content.ReadAsStringAsync();
                    saveMessage = $"فشل تحديث التقييم: {error}";
                    saveSuccess = false;
                    Console.WriteLine($" Update failed: {error}");
                }
            }
            else
            {
                Console.WriteLine("Creating new evaluation");

                // Create new evaluation
                var createDto = new CreateProfessorEvaluationDto
                {
                    EvaluationPeriodId = currentProfEval.EvaluationPeriodId,
                    TaEmployeeId = currentProfEval.TaEmployeeId,
                    SemesterName = currentProfEval.SemesterName,
                    SemesterCode = currentProfEval.SemesterCode,
                    ProfessorEmployeeId = currentProfessorId,
                    CourseCode = currentProfEval.CourseCode,
                    CourseName = currentProfEval.CourseName,
                    OfficeHoursScore = currentProfEval.OfficeHoursScore,
                    AttendanceScore = currentProfEval.AttendanceScore,
                    PerformanceScore = currentProfEval.PerformanceScore,
                    Comments = currentProfEval.Comments
                };

                var response = await Http.PostAsJsonAsync("api/ProfessorEvaluation/CreateProfessorEvaluation", createDto);

                if (response.IsSuccessStatusCode)
                {
                    saveMessage = "تم حفظ التقييم بنجاح";
                    saveSuccess = true;
                    Console.WriteLine("✅ Create successful");
                }
                else
                {
                    var error = await response.Content.ReadAsStringAsync();
                    saveMessage = $"فشل حفظ التقييم: {error}";
                    saveSuccess = false;
                    Console.WriteLine($"❌ Create failed: {error}");
                }
            }

            if (saveSuccess)
            {
                await LoadData(); 
                HideModal();
            }
        }
        catch (Exception ex)
        {
            saveMessage = $"حدث خطأ: {ex.Message}";
            saveSuccess = false;
            Console.WriteLine($"❌ Exception in SaveEvaluation: {ex.Message}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }
