@page "/professor"
@using Shared.Dtos
@inject HttpClient Http
@inject IJSRuntime JS
@rendermode InteractiveWebAssembly
<HeadContent>
    <link href="./Custom-Rtl.css" rel="stylesheet" />
</HeadContent>

<h3 class="text-center mb-4">تقييم استاذ المقرر</h3>

<div class="d-flex flex-column justify-content-center align-items-center vh-80">
    <div class="w-75 mb-4 shadow-sm">
        @if (isLoading)
        {
            <p>جارٍ تحميل البيانات...</p>
        }
        else if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }
        else
        {
             <div class="table-responsive">
                <table class="table table-hover table-striped" dir="rtl">
                    <thead class="table-primary">
                        <tr>
                            <th>اسم مساعد المدرس</th>
                            <th>المقرر</th>
                            <th>الحالة</th>
                            <th>إجراء</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ta in taList)
                        {
                            <tr>
                                <td>@ta.TAName</td>
                                <td>@ta.SubjectName</td>
                                <td>
                                    @if (ta.Total.HasValue)
                                    {
                                        @if (ta.Total.Value >= 25)
                                        {
                                            <span class="result-pill">النتيجة: @ta.Total/30</span>
                                        }
                                        else if (ta.Total.Value >= 15)
                                        {
                                            <span class="result-pill">النتيجة:  @ta.Total/30</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="result-pill" style="background-color:#ffe6e6; color:#b30000;">غير مقيّم</span>
                                    }
                                </td>
                               <td>
                                    <button type="button"
                                            class="btn btn-sm @(ta.Status == "Approved" ? "btn-success" : "btn-primary")"
                                            @onclick="() => OpenModal(ta)">
                                        @GetButtonText(ta)
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Modal Component -->
@if (isModalVisible && selectedTA != null)
{
    <div class="modal-overlay" @onclick="HideModal">
        <div class="modal-container" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h5 class="m-0">تقييم استاذ المقرر</h5>
                <button type="button" class="btn-close btn-close-white" @onclick="HideModal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="info-section mb-4">
                    <div class="row g-2">
                        <div class="col-6">
                            <p class="mb-2"><strong>الاسم:</strong> @selectedTA.TAName</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>الرقم الوظيفي:</strong> @selectedTA.WorkId</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>المقرر:</strong> @selectedTA.SubjectName</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>عدد الحصص:</strong> @selectedTA.NumberOfClasses</p>
                        </div>
                    </div>
                </div>

                <hr class="my-3" />

                <div class="grades-section">
                    <!-- Grade 1 -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="fw-bold mb-2">الالتزام بالساعات المكتبية</h6>
                            <small class="text-muted d-block mb-2">(من 0 إلى 10)</small>
                            <input type="number"
                                   class="form-control @(validationErrors.ContainsKey("grade1") ? "is-invalid" : "")"
                                   @bind="selectedTA.grade1"
                                   @bind:event="oninput"
                                   @onblur="ValidateGrade1"
                                   min="0"
                                   max="10"
                                   readonly="@isReadOnly" />
                            @if (validationErrors.ContainsKey("grade1"))
                            {
                                <div class="invalid-feedback">@validationErrors["grade1"]</div>
                            }
                        </div>
                    </div>

                    <!-- Grade 2 -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="fw-bold mb-2">تدوين ورصد الغياب</h6>
                            <small class="text-muted d-block mb-2">(من 0 إلى 5)</small>
                            <input type="number"
                                   class="form-control @(validationErrors.ContainsKey("grade2") ? "is-invalid" : "")"
                                   @bind="selectedTA.grade2"
                                   @bind:event="oninput"
                                   @onblur="ValidateGrade2"
                                   min="0"
                                   max="5"
                                   readonly="@isReadOnly" />
                            @if (validationErrors.ContainsKey("grade2"))
                            {
                                <div class="invalid-feedback">@validationErrors["grade2"]</div>
                            }
                        </div>
                    </div>

                    <!-- Grade 3 -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="fw-bold mb-2">الأداء التدريبي في المقرر</h6>
                            <small class="text-muted d-block mb-2">(من 0 إلى 15)</small>
                            <input type="number"
                                   class="form-control @(validationErrors.ContainsKey("grade3") ? "is-invalid" : "")"
                                   @bind="selectedTA.grade3"
                                   @bind:event="oninput"
                                   @onblur="ValidateGrade3"
                                   min="0"
                                   max="15"
                                   readonly="@isReadOnly" />
                            @if (validationErrors.ContainsKey("grade3"))
                            {
                                <div class="invalid-feedback">@validationErrors["grade3"]</div>
                            }
                        </div>
                    </div>

                    <!-- Total -->
                    <div class="alert alert-primary text-center mt-4 py-3">
                        <div class="d-flex justify-content-center align-items-center gap-3">
                            <span class="fs-5 fw-bold">المجموع الكلي:</span>
                            <span class="fs-2 fw-bold text-primary">@Total</span>
                            <span class="fs-5 text-muted">/ 30</span>
                        </div>
                    </div>

                    @if (validationErrors.Any())
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            يرجى تصحيح الأخطاء قبل الحفظ
                        </div>
                    }
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary px-4" @onclick="HideModal">
                    <i class="bi bi-x-circle me-2"></i>إلغاء
                </button>
                @if (!isReadOnly)
                {
                    <button type="button"
                            class="btn btn-success px-4"
                            @onclick="SaveGrade"
                            disabled="@(validationErrors.Any())">
                        <i class="bi bi-check-circle me-2"></i>حفظ التقييم
                    </button>
                }
            </div>
        </div>
    </div>
</div>
}

@code {
    private List<TAEvaluationDto> taList = new();
    private TAEvaluationDto? selectedTA;
    private bool isLoading = true;
    private string? errorMessage;
    private Dictionary<string, string> validationErrors = new();
    private bool isReadOnly = false;

    private int Total => (selectedTA?.grade1 ?? 0) + (selectedTA?.grade2 ?? 0) + (selectedTA?.grade3 ?? 0);

    private bool isModalVisible = false;

    private void ValidateGrade1()
    {
        if (selectedTA == null) return;

        validationErrors.Remove("grade1");

        if (selectedTA.grade1 < 0)
        {
            selectedTA.grade1 = 0;
            validationErrors["grade1"] = "الدرجة لا يمكن أن تكون سالبة";
        }
        else if (selectedTA.grade1 > 10)
        {
            selectedTA.grade1 = 10;
            validationErrors["grade1"] = "الحد الأقصى للدرجة الأولى هو 10";
        }

        StateHasChanged();
    }

    private void ValidateGrade2()
    {
        if (selectedTA == null) return;

        validationErrors.Remove("grade2");

        if (selectedTA.grade2 < 0)
        {
            selectedTA.grade2 = 0;
            validationErrors["grade2"] = "الدرجة لا يمكن أن تكون سالبة";
        }
        else if (selectedTA.grade2 > 5)
        {
            selectedTA.grade2 = 5;
            validationErrors["grade2"] = "الحد الأقصى للدرجة الثانية هو 5";
        }

        StateHasChanged();
    }

    private void ValidateGrade3()
    {
        if (selectedTA == null) return;

        validationErrors.Remove("grade3");

        if (selectedTA.grade3 < 0)
        {
            selectedTA.grade3 = 0;
            validationErrors["grade3"] = "الدرجة لا يمكن أن تكون سالبة";
        }
        else if (selectedTA.grade3 > 15)
        {
            selectedTA.grade3 = 15;
            validationErrors["grade3"] = "الحد الأقصى للدرجة الثالثة هو 15";
        }

        StateHasChanged();
    }

    private void ValidateAllGrades()
    {
        ValidateGrade1();
        ValidateGrade2();
        ValidateGrade3();
    }

    private void OpenModal(TAEvaluationDto ta)
    {
        selectedTA = ta;
        validationErrors.Clear();
        // Determine if the modal should be read-only
        isReadOnly = ta.Status == "Approved";
        // Initialize grades if they haven't been set
        if (selectedTA.grade1 == 0 && selectedTA.grade2 == 0 && selectedTA.grade3 == 0 && !selectedTA.Total.HasValue)
        {
            selectedTA.grade1 = 0;
            selectedTA.grade2 = 0;
            selectedTA.grade3 = 0;
        }

        isModalVisible = true;
        StateHasChanged();
    }

    private void HideModal()
    {
        isModalVisible = false;
        selectedTA = null;
        validationErrors.Clear();
        StateHasChanged();
    }

    private async Task SaveGrade()
    {
        if (selectedTA == null) return;

        // Validate all grades before saving
        ValidateAllGrades();

        if (validationErrors.Any()) 
        {
            return; // Don't save if there are validation errors
        }

        selectedTA.Total = Total;

        try
        {
            await Http.PostAsJsonAsync("api/taevaluations/grade", selectedTA);

            // Update the item in the list
            var item = taList.FirstOrDefault(x => x.Id == selectedTA.Id);
            if (item != null)
            {
                item.grade1 = selectedTA.grade1;
                item.grade2 = selectedTA.grade2;
                item.grade3 = selectedTA.grade3;
                item.Total = selectedTA.Total;
            }

            HideModal();
        }
        catch (Exception ex)
        {
            errorMessage = $"فشل حفظ التقييم: {ex.Message}";
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Demo data with proper grade calculations
            taList = new List<TAEvaluationDto>
            {
                new TAEvaluationDto 
                { 
                    Id=1, 
                    TAName="أحمد محمد", 
                    WorkId="EMP001", 
                    SubjectName="البرمجة الموجهة", 
                    NumberOfClasses=12,
                    grade1=8,
                    grade2=4,
                    grade3=12,
                    Total=24,
                    Status="Approved"
                },
                new TAEvaluationDto 
                { 
                    Id=2, 
                    TAName="فاطمة علي", 
                    WorkId="EMP002", 
                    SubjectName="قواعد البيانات", 
                    NumberOfClasses=10,
                    grade1=0,
                    grade2=0,
                    grade3=0,
                    Status="Pending"
                },
                new TAEvaluationDto 
                { 
                    Id=3, 
                    TAName="محمود حسن", 
                    WorkId="EMP003", 
                    SubjectName="هندسة البرمجيات", 
                    NumberOfClasses=14,
                    grade1=10,
                    grade2=5,
                    grade3=15,
                    Total=30,
                    Status="Pending"
                }
            };
        }
        catch (Exception ex)
        {
            errorMessage = "فشل تحميل بيانات المساعدين.";
        }
        finally
        {
            isLoading = false;
        }
    }
    private string GetButtonText(TAEvaluationDto ta)
    {
        if (ta.Status == "Approved") return "عرض";
        else if (ta.grade1==0&&ta.grade2==0&&ta.grade3==0) return "تقييم"; // For 0 / not graded
        else  return "تعديل";

    }
}
