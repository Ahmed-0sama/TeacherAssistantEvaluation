@page "/professor"
@using Shared.Dtos
@using Shared.Dtos.EvaluationPeriod
@using Shared.Dtos.ProfessorEvaluationDto
@inject HttpClient Http
@inject IJSRuntime JS
@rendermode InteractiveWebAssembly

<HeadContent>
    <link href="./Custom-Rtl.css" rel="stylesheet" />
</HeadContent>

<h3 class="text-center mb-4">تقييم استاذ المقرر</h3>

<div class="d-flex flex-column justify-content-center align-items-center vh-80">
    <div class="w-75 mb-4 shadow-sm">
        @if (isLoading)
        {
            <div class="text-center p-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">جارٍ تحميل البيانات...</span>
                </div>
                <p class="mt-3">جارٍ تحميل البيانات...</p>
            </div>
        }
        else if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }
        else if (!evaluationsList.Any())
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle me-2"></i>
                لا توجد تقييمات متاحة حالياً
                <br />
                <small class="text-muted">Debug: isLoading=@isLoading, Count=@evaluationsList.Count, Error=@(string.IsNullOrEmpty(errorMessage) ? "none" : errorMessage)</small>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped" dir="rtl">
                    <thead class="table-primary">
                        <tr>
                            <th>اسم مساعد التدريس</th>
                            <th>المقرر</th>
                            <th>الحالة</th>
                            <th>إجراء</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var eval in evaluationsList)
                        {
                            <tr>
                                <td>@eval.TAName</td>
                                <td>@eval.CourseName</td>
                                <td>
                                    @if (eval.ProfessorEvaluationTotal.HasValue)
                                    {
                                        <span class="result-pill" style="background-color:#e6f7e6; color:#006600;">
                                            النتيجة: @eval.ProfessorEvaluationTotal/30
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="result-pill" style="background-color:#ffe6e6; color:#b30000;">
                                            غير مقيّم
                                        </span>
                                    }
                                </td>
                                <td>
                                    <button type="button"
                                            class="btn btn-sm @(eval.IsEvaluated ? "btn-info" : "btn-primary")"
                                            @onclick="() => OpenModal(eval)">
                                        @(eval.IsEvaluated ? "عرض/تعديل" : "تقييم")
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<!-- Modal Component -->
@if (isModalVisible && selectedEvaluation != null)
{
    <div class="modal-overlay" @onclick="HideModal">
        <div class="modal-container" @onclick:stopPropagation="true" style="max-width: 700px;">
            <div class="modal-header">
                <h5 class="m-0">تقييم استاذ المقرر</h5>
                <button type="button" class="btn-close btn-close-white" @onclick="HideModal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="info-section mb-4">
                    <div class="row g-3">
                        <div class="col-6">
                            <p class="mb-2"><strong>اسم المساعد:</strong> @selectedEvaluation.TAName</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>الرقم الوظيفي:</strong> @selectedEvaluation.TAEmployeeId</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>المقرر:</strong> @selectedEvaluation.CourseName</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>كود المقرر:</strong> @selectedEvaluation.CourseCode</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>عدد الحصص:</strong> @selectedEvaluation.NumberOfClasses</p>
                        </div>
                        <div class="col-6">
                            <p class="mb-2"><strong>الفترة:</strong> @selectedEvaluation.PeriodName</p>
                        </div>
                    </div>
                </div>

                <hr class="my-3" />

                <div class="grades-section">
                    <!-- Grade 1: Office Hours -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="fw-bold mb-2">الالتزام بالساعات المكتبية</h6>
                            <small class="text-muted d-block mb-2">(من 0 إلى 10)</small>
                            <input type="number"
                                   class="form-control @(validationErrors.ContainsKey("officeHours") ? "is-invalid" : "")"
                                   @bind="currentProfEval.OfficeHoursScore"
                                   @bind:event="oninput"
                                   @onblur="ValidateOfficeHours"
                                   min="0"
                                   max="10"
                                   readonly="@isReadOnly" />
                            @if (validationErrors.ContainsKey("officeHours"))
                            {
                                <div class="invalid-feedback">@validationErrors["officeHours"]</div>
                            }
                        </div>
                    </div>

                    <!-- Grade 2: Attendance -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="fw-bold mb-2">تدوين ورصد الغياب</h6>
                            <small class="text-muted d-block mb-2">(من 0 إلى 5)</small>
                            <input type="number"
                                   class="form-control @(validationErrors.ContainsKey("attendance") ? "is-invalid" : "")"
                                   @bind="currentProfEval.AttendanceScore"
                                   @bind:event="oninput"
                                   @onblur="ValidateAttendance"
                                   min="0"
                                   max="5"
                                   readonly="@isReadOnly" />
                            @if (validationErrors.ContainsKey("attendance"))
                            {
                                <div class="invalid-feedback">@validationErrors["attendance"]</div>
                            }
                        </div>
                    </div>

                    <!-- Grade 3: Performance -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="fw-bold mb-2">الأداء التدريبي في المقرر</h6>
                            <small class="text-muted d-block mb-2">(من 0 إلى 15)</small>
                            <input type="number"
                                   class="form-control @(validationErrors.ContainsKey("performance") ? "is-invalid" : "")"
                                   @bind="currentProfEval.PerformanceScore"
                                   @bind:event="oninput"
                                   @onblur="ValidatePerformance"
                                   min="0"
                                   max="15"
                                   readonly="@isReadOnly" />
                            @if (validationErrors.ContainsKey("performance"))
                            {
                                <div class="invalid-feedback">@validationErrors["performance"]</div>
                            }
                        </div>
                    </div>

                    <!-- Comments -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <label class="form-label fw-bold">ملاحظات إضافية (اختياري)</label>
                            <textarea class="form-control"
                                      @bind="currentProfEval.Comments"
                                      rows="3"
                                      placeholder="أضف أي ملاحظات إضافية..."
                                      readonly="@isReadOnly"></textarea>
                        </div>
                    </div>

                    <!-- Total -->
                    <div class="alert alert-primary text-center mt-4 py-3">
                        <div class="d-flex justify-content-center align-items-center gap-3">
                            <span class="fs-5 fw-bold">المجموع الكلي:</span>
                            <span class="fs-2 fw-bold text-primary">@Total</span>
                            <span class="fs-5 text-muted">/ 30</span>
                        </div>
                    </div>

                    @if (validationErrors.Any())
                    {
                        <div class="alert alert-warning mt-3">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            يرجى تصحيح الأخطاء قبل الحفظ
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(saveMessage))
                    {
                        <div class="alert @(saveSuccess ? "alert-success" : "alert-danger") mt-3">
                            @saveMessage
                        </div>
                    }
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary px-4" @onclick="HideModal">
                    <i class="bi bi-x-circle me-2"></i>إلغاء
                </button>
                @if (!isReadOnly)
                {
                    <button type="button"
                            class="btn btn-success px-4"
                            @onclick="SaveEvaluation"
                            disabled="@(validationErrors.Any() || isSaving)">
                        @if (isSaving)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="bi bi-check-circle me-2"></i>@(selectedEvaluation.IsEvaluated ? "تحديث التقييم" : "حفظ التقييم")
                    </button>
                }
            </div>
        </div>
    </div>
}

@code {

    // State variables
    private List<TAEvaluationViewModelDto> evaluationsList = new();
    private TAEvaluationViewModelDto? selectedEvaluation;
    private ProfessorEvaluationResponseDto currentProfEval = new();

    private bool isLoading = true;
    private bool isModalVisible = false;
    private bool isReadOnly = false;
    private bool isSaving = false;
    private bool saveSuccess = false;

    private string? errorMessage;
    private string? saveMessage;
    private Dictionary<string, string> validationErrors = new();

    // TODO: Replace with actual logged-in professor ID from authentication
    private int currentProfessorId = 123;

    // CHANGED: Now using EvaluationPeriodId instead of looking up evaluations
    private int currentEvaluationPeriodId = 1; // TODO: Get from actual period selection or API

    private int Total => currentProfEval.OfficeHoursScore +
                         currentProfEval.AttendanceScore +
                         currentProfEval.PerformanceScore;

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("=== OnInitializedAsync called ===");
        Console.WriteLine($"HttpClient BaseAddress: {Http.BaseAddress}");

        try
        {
            await LoadData();
            Console.WriteLine("=== LoadData completed successfully ===");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"=== Exception in OnInitializedAsync: {ex.Message} ===");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // TODO: Replace with actual API calls when ready
            bool useRealApi = true; // Set to true when API is ready

            if (useRealApi)
            {
                await LoadDataFromApi();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"فشل تحميل البيانات: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadDataFromApi()
    {
        // Step 1: Get existing professor evaluations for this professor
        var profEvalResponse = await Http.GetAsync($"api/ProfessorEvaluation/GetByProfessor/{currentProfessorId}");
        var existingEvaluations = new List<ProfessorEvaluationResponseDto>();

        if (profEvalResponse.IsSuccessStatusCode)
        {
            existingEvaluations = await profEvalResponse.Content.ReadFromJsonAsync<List<ProfessorEvaluationResponseDto>>() ?? new();
        }

        // Step 2: Get period details
        var periodResponse = await Http.GetAsync($"api/EvaluationPeriod/{currentEvaluationPeriodId}");
        if (!periodResponse.IsSuccessStatusCode)
        {
            throw new Exception("فشل تحميل بيانات الفترة");
        }

        var periodDetails = await periodResponse.Content.ReadFromJsonAsync<GetEvaluationPeriodDto>();

        // Step 3: Get list of TAs using UserDataDto
        // TODO: Replace with your actual endpoint to get TAs for the period
        var taListResponse = await Http.GetAsync($"api/TA/GetActiveTAsForPeriod/{currentEvaluationPeriodId}");
        List<UserDataDto> allTAs = new();

        if (taListResponse.IsSuccessStatusCode)
        {
            allTAs = await taListResponse.Content.ReadFromJsonAsync<List<UserDataDto>>() ?? new();
        }

        // Step 4: Combine data
        evaluationsList = new List<TAEvaluationViewModelDto>();

        foreach (var ta in allTAs)
        {
            // CHANGED: Map EmployeeNumber to string
            int taEmployeeId = ta.EmployeeNumber;

            // Get all professor evaluations for this TA in this period
            var profEvalsForTA = existingEvaluations
                .Where(pe => pe.EvaluationPeriodId == currentEvaluationPeriodId && pe.TaEmployeeId == taEmployeeId)
                .ToList();

            if (profEvalsForTA.Any())
            {
                foreach (var profEval in profEvalsForTA)
                {
                    var viewModel = new TAEvaluationViewModelDto
                    {
                        ProfEvalId = profEval.ProfEvalId,
                        EvaluationPeriodId = currentEvaluationPeriodId,
                        TAEmployeeId = taEmployeeId,                     // MAPPED from EmployeeNumber
                        PeriodId = currentEvaluationPeriodId,
                        PeriodName = periodDetails?.PeriodName ?? "فترة غير معروفة",
                        StatusId = profEval.StatusId,
                        StatusName = profEval.StatusName,
                        CanEdit = profEval.StatusId <= 6,

                        TAName = ta.Name,                                // From UserDataDto
                        CourseCode = profEval.CourseCode,
                        CourseName = profEval.CourseName,
                        NumberOfClasses = 12,                            // Default or get from another source

                        ProfessorEvaluationTotal = profEval.TotalScore
                    };

                    evaluationsList.Add(viewModel);
                }
            }
            else
            {
                // TA hasn't been evaluated yet
                var viewModel = new TAEvaluationViewModelDto
                {
                    ProfEvalId = null,
                    EvaluationPeriodId = currentEvaluationPeriodId,
                    TAEmployeeId = taEmployeeId,                         // MAPPED from EmployeeNumber
                    PeriodId = currentEvaluationPeriodId,
                    PeriodName = periodDetails?.PeriodName ?? "فترة غير معروفة",
                    StatusId = 1,
                    StatusName = "قيد الانتظار",
                    CanEdit = true,

                    TAName = ta.Name,                                    // From UserDataDto
                    CourseCode = "N/A",
                    CourseName = "يحتاج تقييم",
                    NumberOfClasses = 12,

                    ProfessorEvaluationTotal = null
                };

                evaluationsList.Add(viewModel);
            }
        }
    }


    private void OpenModal(TAEvaluationViewModelDto eval)
    {
        selectedEvaluation = eval;
        validationErrors.Clear();
        saveMessage = null;

        if (eval.IsEvaluated)
        {
            // Load existing evaluation from API
            LoadExistingEvaluationAsync(eval);
        }
        else
        {
            // New evaluation
            currentProfEval = new ProfessorEvaluationResponseDto
            {
                EvaluationPeriodId = eval.EvaluationPeriodId,  // CHANGED from EvaluationId
                TaEmployeeId = eval.TAEmployeeId,              // NEW
                ProfessorEmployeeId = currentProfessorId,
                CourseCode = eval.CourseCode,
                CourseName = eval.CourseName,
                OfficeHoursScore = 0,
                AttendanceScore = 0,
                PerformanceScore = 0,
                Comments = "",
                StatusId = 1  // NEW: Default status
            };
            isReadOnly = false;
        }

        isModalVisible = true;
        StateHasChanged();
    }

    private async void LoadExistingEvaluationAsync(TAEvaluationViewModelDto eval)
    {
        try
        {
            // CHANGED: Fixed URL (added missing slash)
            var response = await Http.GetAsync($"api/ProfessorEvaluation/GetProfessorEvaluationById/{eval.ProfEvalId}");

            if (response.IsSuccessStatusCode)
            {
                var profEvalDetail = await response.Content.ReadFromJsonAsync<ProfessorEvaluationResponseDto>();

                if (profEvalDetail != null)
                {
                    currentProfEval = profEvalDetail;
                }
                else
                {
                    SetDefaultEvaluation(eval);
                }
            }
            else
            {
                SetDefaultEvaluation(eval);
            }

            isReadOnly = eval.StatusId > 6; // Read-only after HOD review
            StateHasChanged();
        }
        catch
        {
            SetDefaultEvaluation(eval);
            isReadOnly = eval.StatusId > 6;
            StateHasChanged();
        }
    }

    private void SetDefaultEvaluation(TAEvaluationViewModelDto eval)
    {
        currentProfEval = new ProfessorEvaluationResponseDto
        {
            ProfEvalId = eval.ProfEvalId!.Value,
            EvaluationPeriodId = eval.EvaluationPeriodId,  // CHANGED from EvaluationId
            TaEmployeeId = eval.TAEmployeeId,              // NEW
            ProfessorEmployeeId = currentProfessorId,
            CourseCode = eval.CourseCode,
            CourseName = eval.CourseName,
            OfficeHoursScore = 0,
            AttendanceScore = 0,
            PerformanceScore = 0,
            Comments = "",
            StatusId = eval.StatusId  // NEW
        };
    }

    private void HideModal()
    {
        isModalVisible = false;
        selectedEvaluation = null;
        validationErrors.Clear();
        saveMessage = null;
        StateHasChanged();
    }

    // Validation methods remain the same
    private void ValidateOfficeHours()
    {
        validationErrors.Remove("officeHours");
        if (currentProfEval.OfficeHoursScore < 0)
        {
            currentProfEval.OfficeHoursScore = 0;
            validationErrors["officeHours"] = "الدرجة لا يمكن أن تكون سالبة";
        }
        else if (currentProfEval.OfficeHoursScore > 10)
        {
            currentProfEval.OfficeHoursScore = 10;
            validationErrors["officeHours"] = "الحد الأقصى للدرجة هو 10";
        }
        StateHasChanged();
    }

    private void ValidateAttendance()
    {
        validationErrors.Remove("attendance");
        if (currentProfEval.AttendanceScore < 0)
        {
            currentProfEval.AttendanceScore = 0;
            validationErrors["attendance"] = "الدرجة لا يمكن أن تكون سالبة";
        }
        else if (currentProfEval.AttendanceScore > 5)
        {
            currentProfEval.AttendanceScore = 5;
            validationErrors["attendance"] = "الحد الأقصى للدرجة هو 5";
        }
        StateHasChanged();
    }

    private void ValidatePerformance()
    {
        validationErrors.Remove("performance");
        if (currentProfEval.PerformanceScore < 0)
        {
            currentProfEval.PerformanceScore = 0;
            validationErrors["performance"] = "الدرجة لا يمكن أن تكون سالبة";
        }
        else if (currentProfEval.PerformanceScore > 15)
        {
            currentProfEval.PerformanceScore = 15;
            validationErrors["performance"] = "الحد الأقصى للدرجة هو 15";
        }
        StateHasChanged();
    }

    private void ValidateAllFields()
    {
        ValidateOfficeHours();
        ValidateAttendance();
        ValidatePerformance();
    }

    private async Task SaveEvaluation()
    {
        ValidateAllFields();

        if (validationErrors.Any())
        {
            saveMessage = "يرجى تصحيح الأخطاء قبل الحفظ";
            saveSuccess = false;
            return;
        }

        isSaving = true;
        saveMessage = null;

        try
        {
            bool useRealApi = true;

            if (useRealApi)
            {
                if (selectedEvaluation!.IsEvaluated)
                {
                    // CHANGED: Update existing evaluation - now using profEvalId
                    var updateDto = new UpdateProfessorEvaluationDto
                    {
                        CourseCode = currentProfEval.CourseCode,
                        CourseName = currentProfEval.CourseName,
                        OfficeHoursScore = currentProfEval.OfficeHoursScore,
                        AttendanceScore = currentProfEval.AttendanceScore,
                        PerformanceScore = currentProfEval.PerformanceScore,
                        Comments = currentProfEval.Comments,
                       // StatusId = currentProfEval.StatusId  // NEW
                    };

                    // CHANGED: Now uses profEvalId instead of evaluationId
                    var response = await Http.PutAsJsonAsync(
                        $"api/ProfessorEvaluation/UpdateEvaluation/{currentProfEval.ProfEvalId}",
                        updateDto);

                    if (response.IsSuccessStatusCode)
                    {
                        saveMessage = "تم تحديث التقييم بنجاح";
                        saveSuccess = true;
                    }
                    else
                    {
                        var error = await response.Content.ReadAsStringAsync();
                        saveMessage = $"فشل تحديث التقييم: {error}";
                        saveSuccess = false;
                    }
                }
                else
                {
                    // CHANGED: Create new evaluation with new fields
                    var createDto = new CreateProfessorEvaluationDto
                    {
                        EvaluationPeriodId = currentProfEval.EvaluationPeriodId,  // CHANGED from EvaluationId
                        TaEmployeeId = currentProfEval.TaEmployeeId,              // NEW
                        ProfessorEmployeeId = currentProfessorId,
                        CourseCode = currentProfEval.CourseCode,
                        CourseName = currentProfEval.CourseName,
                        OfficeHoursScore = currentProfEval.OfficeHoursScore,
                        AttendanceScore = currentProfEval.AttendanceScore,
                        PerformanceScore = currentProfEval.PerformanceScore,
                        Comments = currentProfEval.Comments,
                        //StatusId = 1  // NEW: Default status for new evaluation
                    };

                    var response = await Http.PostAsJsonAsync("api/ProfessorEvaluation/CreateProfessorEvaluation", createDto);

                    if (response.IsSuccessStatusCode)
                    {
                        saveMessage = "تم حفظ التقييم بنجاح";
                        saveSuccess = true;
                    }
                    else
                    {
                        var error = await response.Content.ReadAsStringAsync();
                        saveMessage = $"فشل حفظ التقييم: {error}";
                        saveSuccess = false;
                    }
                }

                if (saveSuccess)
                {
                    await Task.Delay(1500);
                    await LoadData();
                    HideModal();
                }
            }
            else
            {
                // Simulate API call with dummy data
                await Task.Delay(1000);

                saveMessage = selectedEvaluation!.IsEvaluated ? "تم تحديث التقييم بنجاح" : "تم حفظ التقييم بنجاح";
                saveSuccess = true;

                // Update local data
                selectedEvaluation.ProfessorEvaluationTotal = Total;
                selectedEvaluation.ProfEvalId = selectedEvaluation.ProfEvalId ?? new Random().Next(100, 999);

                await Task.Delay(1500);
                HideModal();
            }
        }
        catch (Exception ex)
        {
            saveMessage = $"حدث خطأ: {ex.Message}";
            saveSuccess = false;
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }
}