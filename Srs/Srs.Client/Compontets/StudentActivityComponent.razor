@using Shared.Dtos
@inject HttpClient Http

<HeadContent>
    <link href="./Custom-Rtl.css" rel="stylesheet" />
</HeadContent>

<div class="card shadow-sm w-100" dir="rtl">
    <div class="card-body">
        <h3 style="color:cornflowerblue">رابعا : الأنشطة الطلابية</h3>
        <hr style="color:cornflowerblue" />
        <div class="row g-3 mt-3" dir="rtl">
            <div class="col-md-4">
                <div class="form-check form-check-rtl">
                    <InputCheckbox class="form-check-input"
                                   id="sportActivity"
                                   @bind-Value="studentActivity.IsCompletedStudentActivity"
                                   @bind-Value:after="SendDataToParent" />
                    <label class="form-check-label" for="sportActivity">
                        نشاط رياضي
                    </label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-check form-check-rtl">
                    <InputCheckbox class="form-check-input"
                                   id="socialActivity"
                                   @bind-Value="studentActivity.IsCompletedSocialActivity"
                                   @bind-Value:after="SendDataToParent" />
                    <label class="form-check-label" for="socialActivity">
                        نشاط اجتماعي
                    </label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-check form-check-rtl">
                    <InputCheckbox class="form-check-input"
                                   id="culturalActivity"
                                   @bind-Value="studentActivity.IsCompletedCulturalActivity"
                                   @bind-Value:after="SendDataToParent" />
                    <label class="form-check-label" for="culturalActivity">
                        نشاط ثقافي
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private StudentActivityDto studentActivity = new StudentActivityDto();
    private bool hasSentInitialData = false;

    [Parameter]
    public StudentActivityDto? InitialData { get; set; }

    [Parameter]
    public EventCallback<StudentActivityDto> OnActivityLoaded { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        // If the parent passed initial data, apply it
        if (InitialData != null)
        {
            studentActivity = InitialData;
            Console.WriteLine($"📥 Student activity component received initial data: Sport={InitialData.IsCompletedStudentActivity}, Social={InitialData.IsCompletedSocialActivity}, Cultural={InitialData.IsCompletedCulturalActivity}");
        }

        // Ensure parent gets the current state once after parameters are set
        if (!hasSentInitialData)
        {
            await SendDataToParent();
            hasSentInitialData = true;
        }
    }

    private async Task SendDataToParent()
    {
        Console.WriteLine($"📤 Sending student activity data: Sport={studentActivity.IsCompletedStudentActivity}, Social={studentActivity.IsCompletedSocialActivity}, Cultural={studentActivity.IsCompletedCulturalActivity}");
        if (OnActivityLoaded.HasDelegate)
        {
            await OnActivityLoaded.InvokeAsync(studentActivity);
        }
    }
}