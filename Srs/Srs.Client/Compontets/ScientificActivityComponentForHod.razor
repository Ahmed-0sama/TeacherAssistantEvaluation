    [Parameter] public bool IsViewMode { get; set; }
    [Parameter] public Dictionary<int, int>? ExistingRatings { get; set; }

    private Dictionary<int, int> administrativeRatings = new();

    // In OnParametersSet or OnInitialized, load existing ratings
    protected override void OnParametersSet()
    {
        base.OnParametersSet();

        if (ExistingRatings != null && ExistingRatings.Any())
        {
            administrativeRatings = new Dictionary<int, int>(ExistingRatings);
        }
    }

    // If you have any input fields for administrative activities (criteria 6-11),
