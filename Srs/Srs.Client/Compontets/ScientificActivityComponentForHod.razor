        {
            administrativeRatings[criterionId] = ratingValue;
        }
        else
        {
            administrativeRatings.Remove(criterionId);
        }

        OnRatingsChanged.InvokeAsync(administrativeRatings);
    }

    [Parameter]
    public int EvaluationId { get; set; }
    // Modal state
    private bool showModal = false;
    private bool isEditMode = false;
    private ResearchPaperDto currentPaper = new ResearchPaperDto();
    private decimal scientificScore;

    protected override async Task OnInitializedAsync()
    {
        await LoadActivityData();
    }

    private async Task LoadActivityData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // Validate EvaluationId
            if (EvaluationId <= 0)
            {
                errorMessage = "معرف التقييم غير صالح";
                return;
            }

            var gsdeanResponse = await Http.GetAsync($"/api/GSDean/GetByEvaluation/{EvaluationId}");

            if (gsdeanResponse.IsSuccessStatusCode)
            {
                var evaluationData = await gsdeanResponse.Content.ReadFromJsonAsync<GsdeanEvaluationDto>();

                if (evaluationData != null)
                {
                    // Map API data to mastersData
                    mastersData = new MastersDto
                        {
                            Major = evaluationData.ProgramName,
                            HoursGained = evaluationData.CompletedHours,
                            Grade = evaluationData.Gpa,
                            EstimatedGraduationDate = evaluationData.ExpectedCompletionDate,
                            GradeGivenbySupervisor = evaluationData.ProgressScore ?? 0,
                            Status = evaluationData.EvaluationComments,
                            Notes = evaluationData.EvaluationComments,
                            ResearchPointsCompleted = evaluationData.TopicChosen,
                            SearchInResources = evaluationData.LiteratureReview,
                            SearchPlanning = evaluationData.ResearchPlan,
                            CollectDataAndAnalyze = evaluationData.DataCollection,
                            ResearchReportWriting = evaluationData.Writing,
                            ScientificResearchReport = evaluationData.ThesisDefense
                        };
                    Console.WriteLine("✅ Data loaded successfully from API");
                }
                else
                {
                    errorMessage = "لم يتم العثور على بيانات التقييم";
                }
            }
            else if (gsdeanResponse.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                // No data found - initialize with empty data
                Console.WriteLine("No evaluation data found - initializing empty form");
                mastersData = new MastersDto
                    {
                        Major = "",
                        HoursGained = 0,
                        Grade = 0,
                        EstimatedGraduationDate = DateOnly.FromDateTime(DateTime.Now),
                        ResearchPointsCompleted = false,
                        SearchInResources = false,
                        SearchPlanning = false,
                        CollectDataAndAnalyze = false,
                        ResearchReportWriting = false,
                        ScientificResearchReport = false
                    };
            }
            else
            {
                var errorContent = await gsdeanResponse.Content.ReadAsStringAsync();
                errorMessage = $"خطأ في تحميل البيانات: {gsdeanResponse.StatusCode} - {errorContent}";
            }

            try
            {
                var vpgsResponse = await Http.GetAsync($"/api/Vpgs/evaluation/{EvaluationId}");

                if (vpgsResponse.IsSuccessStatusCode)
                {
                    var vpgsData = await vpgsResponse.Content.ReadFromJsonAsync<VpgsEvaluationResponseDto>();

                    if (vpgsData != null)
                    {
                        scientificScore = vpgsData.ScientificScore;
                    }
                }
                else if (vpgsResponse.StatusCode == System.Net.HttpStatusCode.NotFound)
                {
                    scientificScore = 0;
                }
                else
                {
                    var errorContent = await vpgsResponse.Content.ReadAsStringAsync();
                }
            }
            catch (Exception vpgsEx)
            {
                Console.WriteLine($"⚠️ Non-critical error loading VPGS data: {vpgsEx.Message}");

                scientificScore = 0;
            }
            try
            {
                await LoadResearchPapers(EvaluationId);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"⚠️ Error loading research papers: {ex.Message}");
            }

            // Initialize research papers and activities if not loaded from parameters
            if (researchPapers == null || !researchPapers.Any())
            {
                researchPapers = new List<ResearchPaperDto>();
            }

            if (otherActivities == null)
            {
                otherActivities = new OtherActivitiesDto();
            }
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"خطأ في الاتصال بالخادم: {httpEx.Message}";
            Console.WriteLine($"HTTP Error: {httpEx}");
        }
        catch (Exception ex)
        {
            errorMessage = $"حدث خطأ أثناء تحميل البيانات: {ex.Message}";
            Console.WriteLine($"Error loading data: {ex}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
    private async Task LoadResearchPapers(int evaluationId)
    {
        try
        {
            Console.WriteLine($"🔍 Loading research papers for evaluation ID: {evaluationId}");

            var response = await Http.GetAsync($"/api/Evaluation/GetTASubmission/{evaluationId}");

            Console.WriteLine($"📡 Response Status: {response.StatusCode}");

            if (response.IsSuccessStatusCode)
            {
                // The API returns TASubmissionResponseDto, not a direct list
                var submissionData = await response.Content.ReadFromJsonAsync<TASubmissionResponseDto>();

                if (submissionData?.ResearchActivities != null && submissionData.ResearchActivities.Any())
                {
                    // Map ResearchActivityResponseDto to ResearchPaperDto
                    researchPapers = submissionData.ResearchActivities.Select(activity => new ResearchPaperDto
                    {
                        Title = activity.Title,
                        ConferenceOrJournal = activity.Journal,
                        Location = activity.Location,
                        PageCount = activity.PageCount,
                        Date = activity.ActivityDate,
                        Status = GetStatusCode(activity.StatusName)
                    }).ToList();
                    otherActivities = new OtherActivitiesDto
                    {
                        HasTechnicalReportsOrArticles = submissionData.HasTechnicalReports,
                        HasGivenLecturesOrSeminars = submissionData.HasSeminarLectures,
                        HasAttendedScientificSeminars = submissionData.HasAttendingSeminars
                    };
                    administrativeData = new AdminstrativeActivityDto
                    {
                        IsAcademicGuidanceCommittee = submissionData.IsInAcademicAdvisingCommittee,
                        ISchedulingCommittee = submissionData.IsInSchedulingCommittee,
                        IsQualityWorksCommittee = submissionData.IsInQualityAssuranceCommittee,
                        IsLaboratoryEquipmentCommittee = submissionData.IsInLabEquipmentCommittee,
                        IsExaminationsOrganizingCommittee = submissionData.IsInExamOrganizationCommittee,
                        IsSocialOrSportsActivityCommittees = submissionData.IsInSocialOrSportsCommittee
                    };

                    Console.WriteLine($"✅ Successfully loaded {researchPapers.Count} research papers");

                    foreach (var paper in researchPapers)
                    {
                        Console.WriteLine($"  - Paper: {paper.Title}, Status: {paper.Status}, Date: {paper.Date}");
                    }
                }
                else
                {
                    Console.WriteLine("ℹ️ No research activities found in submission");
                    researchPapers = new List<ResearchPaperDto>();
                }
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                Console.WriteLine($"❌ Error Response: {errorContent}");
                researchPapers = new List<ResearchPaperDto>();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"❌ Exception loading papers: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            researchPapers = new List<ResearchPaperDto>();
        }
    }


    private void CloseModal()
    {
        showModal = false;
        currentPaper = new ResearchPaperDto();
        StateHasChanged();
    }

    private string GetStatusBadgeClass(int status)
    {
        return status switch
        {
            1 => "bg-success",
            2 => "bg-warning text-dark",
            3 => "bg-info",
            4 => "bg-danger",
            0 => "bg-secondary",
            _ => "bg-secondary text-white"
        };
    }
    private int GetStatusCode(string statusName)
    {
        return statusName?.ToLower() switch
        {
            "published" => 1,
            "under review" => 2,
            "accepted" => 3,
            "rejected" => 4,
            "submitted" => 2,
            _ => 0
        };
    }


    private string GetStatusName(int status)
    {
        return status switch
        {
            1 => "منشور",
            2 => "قيد المراجعة",
            3 => "مقبول",
            4 => "مرفوض",
            0 => "غير محدد",
            _ => "حالة غير معروفة"
        };
    }
