@* TeachingActivitiesEvaluation.razor - FIXED SCORING *@
<div class="card shadow-sm mx-auto" style="max-width: 1100px;">
    <div class="card-body p-4">
        <h5 class="text-end text-dark mb-4">1-2 الأنشطة التعليمية المباشرة والمعادلة (10%)</h5>

        <div class="row mb-3 align-items-center">
            <div class="col-md-8 text-end">
                <label class="form-label mb-0">إعداد مذكرات للجزء العملي /تدريبات</label>
            </div>
            <div class="col-md-4">
                <select class="form-select"
                        value="@GetRatingValue(1)"
                        @onchange="e => UpdateRating(1, e.Value?.ToString())"
                        disabled="@IsViewMode">
                    <option value="">اختر</option>
                    @foreach (var option in gradeOptions)
                    {
                        <option value="@option.Value">@option.Label</option>
                    }
                </select>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <div class="col-md-8 text-end">
                <label class="form-label mb-0">إعداد مساعدات تعليمية وتدريسية جديدة</label>
            </div>
            <div class="col-md-4">
                <select class="form-select"
                        value="@GetRatingValue(2)"
                        @onchange="e => UpdateRating(2, e.Value?.ToString())"
                        disabled="@IsViewMode">
                    <option value="">اختر</option>
                    @foreach (var option in gradeOptions)
                    {
                        <option value="@option.Value">@option.Label</option>
                    }
                </select>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <div class="col-md-8 text-end">
                <label class="form-label mb-0">المساعدة في إعداد التجارب العملية / التمارين</label>
            </div>
            <div class="col-md-4">
                <select class="form-select"
                        value="@GetRatingValue(3)"
                        @onchange="e => UpdateRating(3, e.Value?.ToString())"
                        disabled="@IsViewMode">
                    <option value="">اختر</option>
                    @foreach (var option in gradeOptions)
                    {
                        <option value="@option.Value">@option.Label</option>
                    }
                </select>
            </div>
        </div>

        <div class="row mb-3 align-items-center">
            <div class="col-md-8 text-end">
                <label class="form-label mb-0">المشاركة في تنظيم وإدارة دورات تدريسية/ مؤتمرات</label>
            </div>
            <div class="col-md-4">
                <select class="form-select"
                        value="@GetRatingValue(4)"
                        @onchange="e => UpdateRating(4, e.Value?.ToString())"
                        disabled="@IsViewMode">
                    <option value="">اختر</option>
                    @foreach (var option in gradeOptions)
                    {
                        <option value="@option.Value">@option.Label</option>
                    }
                </select>
            </div>
        </div>

        <div class="row mb-4 align-items-center">
            <div class="col-md-8 text-end">
                <label class="form-label mb-0">أي نشاط تعليمي آخر مكلف به</label>
            </div>
            <div class="col-md-4">
                <select class="form-select"
                        value="@GetRatingValue(5)"
                        @onchange="e => UpdateRating(5, e.Value?.ToString())"
                        disabled="@IsViewMode">
                    <option value="">اختر</option>
                    @foreach (var option in gradeOptions)
                    {
                        <option value="@option.Value">@option.Label</option>
                    }
                </select>
            </div>
        </div>

        <div class="border-top pt-3">
            <p class="text-end fw-semibold mb-0">
                إجمالي تقييم الأنشطة التعليمية المباشرة والمعادلة:
                @CalculateTotal() / 10
            </p>
        </div>
    </div>
</div>

<div class="card bg-primary bg-opacity-10 shadow-sm mx-auto mt-3 mb-4" style="max-width: 800px;">
    <div class="card-body text-center py-4">
        <h5 class="text-primary fw-semibold mb-2">المجموع الكلي للنشاط التعليمي</h5>
        <p class="text-primary fw-bold fs-3 mb-0">
            @(CalculateTotal() + (decimal)TeachingLoadScore) / 50
        </p>
    </div>
</div>

@code {
    [Parameter] public double TeachingLoadScore { get; set; }
    [Parameter] public EventCallback<(Dictionary<int, int> Ratings, decimal Total)> OnRatingsChanged { get; set; }
    [Parameter] public bool IsViewMode { get; set; }
    [Parameter] public Dictionary<int, int>? ExistingRatings { get; set; }

    private Dictionary<int, int> ratings = new();

    // Each criterion is worth 2 points (5 criteria × 2 = 10 points total)
    // Values shown are ScoreValue (0-4), which map to RatingId (1-5)
    private List<GradeOption> gradeOptions = new List<GradeOption>
    {
        new GradeOption { Value = 0, Label = "ضعيف (0)" },
        new GradeOption { Value = 1, Label = "مقبول (0.5)" },
        new GradeOption { Value = 2, Label = "جيد (1)" },
        new GradeOption { Value = 3, Label = "جيد جداً (1.5)" },
     new GradeOption { Value = 4, Label = "ممتاز (2)" }
    };

    protected override void OnParametersSet()
    {
        if (ExistingRatings != null && ExistingRatings.Any())
        {
            // Convert RatingId to ScoreValue for display
     ratings = new Dictionary<int, int>();
         foreach (var kvp in ExistingRatings)
       {
     // RatingId 1-5 maps to ScoreValue 0-4
    int scoreValue = ConvertRatingIdToScoreValue(kvp.Value);
  ratings[kvp.Key] = scoreValue;
            }
        }
    }

    private void UpdateRating(int criterionId, string? value)
    {
        if (int.TryParse(value, out int scoreValue) && scoreValue >= 0)
    {
    ratings[criterionId] = scoreValue;
        }
        else
   {
            ratings.Remove(criterionId);
        }

        // Convert ScoreValue to RatingId before sending to parent
        var ratingsWithRatingIds = ConvertToRatingIds(ratings);
        var total = CalculateTotal();
        OnRatingsChanged.InvokeAsync((ratingsWithRatingIds, total));
    }

    private string GetRatingValue(int criterionId)
    {
   return ratings.TryGetValue(criterionId, out var scoreValue) ? scoreValue.ToString() : "";
    }

    private decimal CalculateTotal()
    {
        // Sum: Value 0=0, 1=0.5, 2=1.0, 3=1.5, 4=2.0
return ratings.Values.Sum(v => v * 0.5m);
    }

    // Convert ScoreValue (0-4) to RatingId (1-5) for Teaching Activities
    private Dictionary<int, int> ConvertToRatingIds(Dictionary<int, int> scoreValues)
    {
      var result = new Dictionary<int, int>();
 
        foreach (var kvp in scoreValues)
        {
          // Teaching Activities: ScoreValue 0-4 maps to RatingId 1-5
 int ratingId = kvp.Value + 1;
            result[kvp.Key] = ratingId;
}
        
        return result;
    }

    // Convert RatingId (1-5) to ScoreValue (0-4) for display
    private int ConvertRatingIdToScoreValue(int ratingId)
    {
        // Teaching Activities: RatingId 1-5 maps to ScoreValue 0-4
        return ratingId >= 1 && ratingId <= 5 ? ratingId - 1 : 0;
    }

    public class GradeOption
    {
  public int Value { get; set; }
      public string Label { get; set; } = string.Empty;
    }
}