@code {
    [Parameter] public EventCallback<Dictionary<int, int>> OnPersonalTraitsChanged { get; set; }
    [Parameter] public EventCallback<Dictionary<int, int>> OnStudentActivitiesChanged { get; set; }
    [Parameter] public bool IsViewMode { get; set; }
    [Parameter] public Dictionary<int, int>? ExistingPersonalTraits { get; set; }
    [Parameter] public Dictionary<int, int>? ExistingStudentActivities { get; set; }

    private Dictionary<int, int> personalTraitsRatings = new();
    private Dictionary<int, int> studentActivitiesRatings = new();

    // Personal Traits (5 criteria × 2 points = 10 points)
    // Value 0 = 0, 1 = 0.5, 2 = 1.0, 3 = 1.5, 4 = 2.0
    private List<GradeOption> personalTraitsGradeOptions = new()
    {
        new GradeOption { Value = 0, Label = "ضعيف (0)" },
        new GradeOption { Value = 1, Label = "مقبول (0.5)" },
        new GradeOption { Value = 2, Label = "جيد (1)" },
        new GradeOption { Value = 3, Label = "جيد جداً (1.5)" },
        new GradeOption { Value = 4, Label = "ممتاز (2)" }
    };

    // Student Activities (3 criteria, scaled to 10 points)
    // Value 0=0, 1=1, 2=2, 3=3, 4≈3.33
    private List<GradeOption> studentActivitiesGradeOptions = new()
    {
        new GradeOption { Value = 0, Label = "ضعيف (0)" },
        new GradeOption { Value = 1, Label = "مقبول (1)" },
        new GradeOption { Value = 2, Label = "جيد (2)" },
        new GradeOption { Value = 3, Label = "جيد جداً (3)" },
        new GradeOption { Value = 4, Label = "ممتاز (3.33)" }
    };

    protected override void OnParametersSet()
    {
        if (ExistingPersonalTraits != null && ExistingPersonalTraits.Any())
        {
            // Convert RatingId to ScoreValue for display
            personalTraitsRatings = new Dictionary<int, int>();
            foreach (var kvp in ExistingPersonalTraits)
            {
                // RatingId 11-15 maps to ScoreValue 0-4
                int scoreValue = ConvertRatingIdToScoreValue(kvp.Value, isPersonalTrait: true);
                personalTraitsRatings[kvp.Key] = scoreValue;
            }
        }

        if (ExistingStudentActivities != null && ExistingStudentActivities.Any())
        {
            // Convert RatingId to ScoreValue for display
            studentActivitiesRatings = new Dictionary<int, int>();
            foreach (var kvp in ExistingStudentActivities)
            {
                // RatingId 6-10 maps to ScoreValue 0-4
                int scoreValue = ConvertRatingIdToScoreValue(kvp.Value, isPersonalTrait: false);
                studentActivitiesRatings[kvp.Key] = scoreValue;
            }
        }
    }

    private void UpdateRating(int criterionId, string? value, bool isStudentActivity)
    {
        var targetDictionary = isStudentActivity ? studentActivitiesRatings : personalTraitsRatings;

        if (int.TryParse(value, out int scoreValue) && scoreValue >= 0)
        {
            targetDictionary[criterionId] = scoreValue;
        }
        else
        {
            targetDictionary.Remove(criterionId);
        }

        // Convert ScoreValue to RatingId before sending to parent
        var ratingsWithRatingIds = ConvertToRatingIds(targetDictionary, isStudentActivity);

        if (isStudentActivity)
        {
            OnStudentActivitiesChanged.InvokeAsync(ratingsWithRatingIds);
        }
        else
        {
            OnPersonalTraitsChanged.InvokeAsync(ratingsWithRatingIds);
        }
    }

    private string GetRatingValue(int criterionId, bool isStudentActivity)
    {
        var targetDictionary = isStudentActivity ? studentActivitiesRatings : personalTraitsRatings;
        return targetDictionary.TryGetValue(criterionId, out var scoreValue)
            ? scoreValue.ToString()
            : string.Empty;
    }

    private decimal CalculatePersonalTraitsTotal()
    {
        // 5 criteria × max 2 points = 10
        // Value 0=0, 1=0.5, 2=1.0, 3=1.5, 4=2.0
        return personalTraitsRatings.Values.Sum(v => v * 0.5m);
    }

    private decimal CalculateStudentActivitiesTotal()
    {
        // 3 criteria, scaled to ~10 points
        // Value 0=0, 1=1, 2=2, 3=3, 4≈3.33
        decimal total = 0;

        foreach (var value in studentActivitiesRatings.Values)
        {
            total += value switch
            {
                0 => 0m,
                1 => 1m,
                2 => 2m,
                3 => 3m,
                4 => 3.33m,
                _ => 0m
            };
        }

        return Math.Round(total, 2);
    }

    // Convert ScoreValue (0-4) to RatingId
    private Dictionary<int, int> ConvertToRatingIds(Dictionary<int, int> scoreValues, bool isStudentActivity)
    {
        var result = new Dictionary<int, int>();

        foreach (var kvp in scoreValues)
        {
            int ratingId;
            if (isStudentActivity)
            {
                // Student Activities: ScoreValue 0-4 maps to RatingId 6-10
                ratingId = kvp.Value + 6;
            }
            else
            {
                // Personal Traits: ScoreValue 0-4 maps to RatingId 11-15
                ratingId = kvp.Value + 11;
            }
            result[kvp.Key] = ratingId;
        }

        return result;
    }

    // Convert RatingId to ScoreValue (0-4) for display
    private int ConvertRatingIdToScoreValue(int ratingId, bool isPersonalTrait)
    {
        if (isPersonalTrait)
        {
            // Personal Traits: RatingId 11-15 maps to ScoreValue 0-4
            return ratingId >= 11 && ratingId <= 15 ? ratingId - 11 : 0;
        }
        else
        {
            // Student Activities: RatingId 6-10 maps to ScoreValue 0-4
            return ratingId >= 6 && ratingId <= 10 ? ratingId - 6 : 0;
        }
    }

    public class GradeOption
    {
        public int Value { get; set; }
        public string Label { get; set; } = string.Empty;
    }
}
