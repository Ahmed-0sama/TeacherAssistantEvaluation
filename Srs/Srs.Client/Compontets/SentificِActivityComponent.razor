@using Shared.Dtos
@using Shared.Dtos.GSDean
@inject HttpClient Http
@inject IJSRuntime JSRuntime
<HeadContent>
    <link href="./Custom-Rtl.css" rel="stylesheet" />
</HeadContent>

<div class="card shadow-sm w-100" dir="rtl">
    <div class="card-body">
        @if (isLoading)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status"></div>
                <p class="mt-3">جاري تحميل البيانات</p>
            </div>
        }
        else if (errorMessage != null)
        {
            <div class="alert alert-danger">@errorMessage</div>
            <button class="btn btn-primary" @onclick="LoadActivityData">إعادة المحاولة</button>
        }
        else
        {
            <h3 style="color:cornflowerblue">ثانيا النشاط العلمي</h3>
            <hr style="color:cornflowerblue" />
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-4">2-1: مدى التقدم في دراسة الماجستير</h5>

                    <!-- Program Info -->
                    <div class="row g-3 mb-4">
                        <div class="col-12 col-sm-6 col-md-3">
                            <label class="form-label">البرنامج في الماجيستير</label>
                            <InputText class="form-control" @bind-Value="mastersData.Major" readonly />
                        </div>

                        <div class="col-12 col-sm-6 col-md-3">
                            <label class="form-label">الساعات المكتسبة</label>
                            <InputNumber class="form-control" @bind-Value="mastersData.HoursGained" readonly />
                        </div>

                        <div class="col-12 col-sm-6 col-md-3">
                            <label class="form-label">المعدل التراكمي</label>
                            <InputNumber class="form-control" @bind-Value="mastersData.Grade" readonly />
                        </div>

                        <div class="col-12 col-sm-6 col-md-3">
                            <label class="form-label">التاريخ المتوقع للاتمام</label>
                            <InputDate class="form-control" @bind-Value="mastersData.EstimatedGraduationDate" readonly />
                        </div>
                    </div>

                    <!-- Progress Indicators -->
                    <h6 class="mb-3">مؤشرات التقدم</h6>
                    <div class="row g-3">
                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-center mb-2">
                            <img src="icons/@(mastersData.ResearchPointsCompleted ? "check-circle-fill.svg" : "check-circle.svg")"
                                 width="20" height="20" style="margin-inline-end: 12px;" />
                            <span class="@(mastersData.ResearchPointsCompleted ? "text-dark" : "text-muted")">
                                اختيار النقط البحثية
                            </span>
                        </div>

                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-center mb-2">
                            <img src="icons/@(mastersData.SearchInResources ? "check-circle-fill.svg" : "check-circle.svg")"
                                 width="20" height="20" style="margin-inline-end: 12px;" />
                            <span class="@(mastersData.SearchInResources ? "text-dark" : "text-muted")">
                                البحث في المصادر والمراجع العلمية
                            </span>
                        </div>

                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-center mb-2">
                            <img src="icons/@(mastersData.SearchPlanning ? "check-circle-fill.svg" : "check-circle.svg")"
                                 width="20" height="20" style="margin-inline-end: 12px;" />
                            <span class="@(mastersData.SearchPlanning ? "text-dark" : "text-muted")">
                                وضع الخطة البحثية
                            </span>
                        </div>

                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-center mb-2">
                            <img src="icons/@(mastersData.CollectDataAndAnalyze ? "check-circle-fill.svg" : "check-circle.svg")"
                                 width="20" height="20" style="margin-inline-end: 12px;" />
                            <span class="@(mastersData.CollectDataAndAnalyze ? "text-dark" : "text-muted")">
                                جمع وتحليل البيانات
                            </span>
                        </div>

                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-center mb-2">
                            <img src="icons/@(mastersData.ResearchReportWriting ? "check-circle-fill.svg" : "check-circle.svg")"
                                 width="20" height="20" style="margin-inline-end: 12px;" />
                            <span class="@(mastersData.ResearchReportWriting ? "text-dark" : "text-muted")">
                                كتابة البحث / الابحاث العلمية
                            </span>
                        </div>

                        <div class="col-12 col-sm-6 col-md-4 d-flex align-items-center mb-2">
                            <img src="icons/@(mastersData.ScientificResearchReport ? "check-circle-fill.svg" : "check-circle.svg")"
                                 width="20" height="20" style="margin-inline-end: 12px;" />
                            <span class="@(mastersData.ScientificResearchReport ? "text-dark" : "text-muted")">
                                كتابة الرسالة العلمية
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Research Papers Section -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5>2-2:سجل اوراقك البحثية و انشطة علمية خلال الفصل الدراسي</h5>

                    @if (researchPapers == null || !researchPapers.Any())
                    {
                        <div class="alert alert-info text-center">
                            <p class="mb-0">لا توجد أوراق بحثية مسجلة حالياً</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive mt-4 shadow-sm rounded bg-secondary bg-opacity-10">
                            <table class="table table-hover table-bordered align-middle mb-0">
                                <thead class="table-secondary">
                                    <tr>
                                        <th class="py-3 fw-semibold">عنوان البحث او الورقة</th>
                                        <th class="py-3 fw-semibold">اسم المؤتمر/الدورية</th>
                                        <th class="py-3 fw-semibold">المكان</th>
                                        <th class="py-3 fw-semibold text-center">عدد الصفحات</th>
                                        <th class="py-3 fw-semibold text-center">التاريخ</th>
                                        <th class="py-3 fw-semibold text-center">الحالة</th>
                                    <th class="py-3 fw-semibold text-center">الرابط</th>
                                    @if (!IsReadOnly)
                                    {
                                        <th class="py-3 fw-semibold text-center">إجراء</th>
                                    }
                                    </tr>
                                </thead>
                                <tbody class="table-group-divider">
                                    @foreach (var paper in researchPapers)
                                    {
                                        <tr>
                                            <td class="py-3">
                                                <span class="fw-bold text-dark">@paper.Title</span>
                                            </td>
                                            <td class="py-3 text-muted">
                                                @paper.ConferenceOrJournal
                                            </td>
                                            <td class="py-3">
                                                <i class="bi bi-geo-alt-fill text-primary me-1"></i>
                                                @paper.Location
                                            </td>
                                            <td class="py-3 text-center">
                                                <span class="badge bg-light text-dark border fs-6">
                                                    @paper.PageCount
                                                </span>
                                            </td>
                                            <td class="py-3 text-center">
                                                <i class="bi bi-calendar-event text-secondary me-1"></i>
                                                @paper.Date.ToString("yyyy/MM/dd")
                                            </td>
                                            <td class="py-3 text-center">
                                                <span class="badge @GetStatusBadgeClass(paper.Status) fs-6 px-3 py-2">
                                                    @GetStatusName(paper.Status)
                                                </span>
                                            </td>
                                        <td class="py-3" style="max-width: 250px;">
                                            @if (!string.IsNullOrEmpty(paper.Url))
                                            {
                                                <a href="@paper.Url" target="_blank" class="text-primary text-decoration-none d-flex align-items-center" title="@paper.Url">
                                                    <i class="bi bi-link-45deg me-1 flex-shrink-0"></i>
                                                    <span class="text-truncate" style="max-width: 200px;">
                                                        @paper.Url
                                                    </span>
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">لا يوجد رابط</span>
                                            }
                                        </td>
                                        @if (!IsReadOnly)
                                        {
                                            <td class="py-3 text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <button class="btn btn-outline-primary"
                                                    @onclick="() => EditPaper(paper.Id)">
                                                        <i class="bi bi-pencil-square me-1"></i>تعديل
                                                    </button>
                                                    <button class="btn btn-outline-danger"
                                                    @onclick="() => DeletePaper(paper.Id)">
                                                        <i class="bi bi-trash3 me-1"></i>حذف
                                                    </button>
                                                </div>
                                            </td>
                                        }
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    <div class="text-end mt-3">
                    @if (!IsReadOnly)
                    {
                        <button class="btn btn-success btn-lg" @onclick="AddNewPaper">
                            <i class="bi bi-plus-circle me-2"></i>إضافة بحث جديد
                        </button>
                    }
                </div>
                </div>
            </div>

        <div class="card shadow-sm mb-4" dir="rtl">
            <div class="card-body">
                <h5 class="card-title mb-4">انشطة علمية اخري</h5>
                <div class="row g-3">
                    <div class="col-12 col-md-4">
                        <div class="form-check form-check-rtl">
                            <input type="checkbox"
                                   class="form-check-input"
                                   id="technicalReports"
                                   checked="@otherActivities.HasTechnicalReportsOrArticles"
                                   @onchange="@(e => UpdateOtherActivity(nameof(otherActivities.HasTechnicalReportsOrArticles), e))"
                                   disabled="@IsReadOnly" />
                            <label class="form-check-label" for="technicalReports">
                                تقارير فنية او مقالات منشور(دون ان تكون ورقة بحثية)
                            </label>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="form-check form-check-rtl">
                            <input type="checkbox"
                                   class="form-check-input"
                                   id="lectures"
                                   checked="@otherActivities.HasGivenLecturesOrSeminars"
                                   @onchange="@(e => UpdateOtherActivity(nameof(otherActivities.HasGivenLecturesOrSeminars), e))"
                                   disabled="@IsReadOnly" />
                            <label class="form-check-label" for="lectures">
                                القاء محاضرات في ندوات او لقاءات
                            </label>
                        </div>
                    </div>

                    <div class="col-12 col-md-4">
                        <div class="form-check form-check-rtl">
                            <input type="checkbox"
                                   class="form-check-input"
                                   id="seminars"
                                   checked="@otherActivities.HasAttendedScientificSeminars"
                                   @onchange="@(e => UpdateOtherActivity(nameof(otherActivities.HasAttendedScientificSeminars), e))"
                                   disabled="@IsReadOnly" />
                            <label class="form-check-label" for="seminars">
                                حضور ندوات علمية ودورات تدريبية علمية
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>

<!--Modal -->
@if (showModal)
{
    <div class="modal-overlay">
        <div class="modal-container">
            <div class="modal-header">
                <h5 class="modal-title m-0">
                    <i class="bi bi-file-earmark-plus me-2"></i>
                    @(isEditMode ? "تعديل البحث" : "إضافة بحث جديد")
                </h5>
                <button type="button" class="btn btn-sm btn-outline-light ms-auto" @onclick="CloseModal">✖</button>
            </div>
            <EditForm Model="currentPaper" OnValidSubmit="SavePaper">
                <DataAnnotationsValidator />
                <div class="modal-body p-3">
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-bold">عنوان البحث أو الورقة <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="currentPaper.Title" placeholder="أدخل عنوان البحث" />
                            <ValidationMessage For="@(() => currentPaper.Title)" class="text-danger" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label fw-bold">اسم المؤتمر/الدورية <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="currentPaper.ConferenceOrJournal" placeholder="أدخل اسم المؤتمر أو الدورية" />
                            <ValidationMessage For="@(() => currentPaper.ConferenceOrJournal)" class="text-danger" />
                        </div>

                        <div class="col-12 col-md-6">
                            <label class="form-label fw-bold">المكان <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="currentPaper.Location" placeholder="مثال: الرياض، السعودية" />
                            <ValidationMessage For="@(() => currentPaper.Location)" class="text-danger" />
                        </div>

                        <div class="col-12 col-sm-6 col-md-4">
                            <label class="form-label fw-bold">عدد الصفحات <span class="text-danger">*</span></label>
                            <InputNumber class="form-control" @bind-Value="currentPaper.PageCount" placeholder="0" />
                            <ValidationMessage For="@(() => currentPaper.PageCount)" class="text-danger" />
                        </div>

                        <div class="col-12 col-sm-6 col-md-4">
                            <label class="form-label fw-bold">التاريخ <span class="text-danger">*</span></label>
                            <InputDate class="form-control"
                                       @bind-Value="currentPaper.Date"
                                       max="@DateOnly.FromDateTime(DateTime.Today).ToString("yyyy-MM-dd")" />
                        </div>

                        <div class="col-12 col-sm-6 col-md-4">
                            <label class="form-label fw-bold">الحالة <span class="text-danger">*</span></label>
                                <InputSelect class="form-select" @bind-Value="currentPaper.Status" TValue="int">
                                    <option value="0">-- اختر الحالة --</option>
                                    <option value="1">منشور</option>
                                    <option value="2">قيد المراجعة</option>
                                    <option value="3">مقبول</option>
                                    <option value="4">مرفوض</option>
                                </InputSelect>
                                <ValidationMessage For="@(() => currentPaper.Status)" class="text-danger" />

                        </div>
                        <div class="col-12 col-sm-6">
                            <label class="form-label fw-bold">Url <span class="text-danger">*</span></label>
                            <InputText class="form-control" @bind-Value="currentPaper.Url"/>
                            <ValidationMessage For="@(() => currentPaper.Url)" class="text-danger" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer p-3 border-top">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">
                        <i class="bi bi-x-circle me-1"></i>إلغاء
                    </button>
                    <button type="submit" class="btn btn-primary ms-2">
                        <i class="bi bi-check-circle me-1"></i>@(isEditMode ? "حفظ التعديلات" : "إضافة")
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    MastersDto mastersData = new MastersDto();
    private bool isLoading = true;
    private List<ResearchPaperDto> researchPapers = new List<ResearchPaperDto>();
    private readonly int evaluationPeriodId = 1; // Example static value
    private OtherActivitiesDto otherActivities = new OtherActivitiesDto();
    private string? errorMessage;
    [Parameter]
    public bool IsReadOnly { get; set; }
    [Parameter]
    public int EvaluationId { get; set; }
    [Parameter]
    public int TAEmployeeId { get; set; }
    [Parameter]
    public List<ResearchPaperDto>? InitialResearchPapers { get; set; }

    [Parameter]
    public OtherActivitiesDto? InitialOtherActivities { get; set; }

    [Parameter]
    public EventCallback<List<ResearchPaperDto>> OnResearchPapersLoaded { get; set; }

    [Parameter]
    public EventCallback<OtherActivitiesDto> OnOtherActivitiesLoaded { get; set; }

    // Modal state
    private bool showModal = false;
    private bool isEditMode = false;
    private ResearchPaperDto currentPaper = new ResearchPaperDto();
    private int nextId = 3;

    protected override async Task OnInitializedAsync()
    {
        await LoadActivityData();
    }

    protected override async Task OnParametersSetAsync()
    {
        Console.WriteLine("=== OnParametersSetAsync Called ===");

        if (InitialResearchPapers != null && InitialResearchPapers.Any())
        {
            researchPapers = new List<ResearchPaperDto>(InitialResearchPapers);
            nextId = researchPapers.Max(p => p.Id) + 1;
            Console.WriteLine($"✅ Loaded {researchPapers.Count} initial research papers");
        }

        if (InitialOtherActivities != null)
        {
            otherActivities = new OtherActivitiesDto
            {
                HasTechnicalReportsOrArticles = InitialOtherActivities.HasTechnicalReportsOrArticles,
                HasGivenLecturesOrSeminars = InitialOtherActivities.HasGivenLecturesOrSeminars,
                HasAttendedScientificSeminars = InitialOtherActivities.HasAttendedScientificSeminars
            };

            await InvokeAsync(StateHasChanged);
        }
    }

    private async Task LoadActivityData()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // Validate EvaluationId
            if (EvaluationId <= 0)
            {
                errorMessage = "معرف التقييم غير صالح";
                return;
            }

            // Fetch data from API
            var response = await Http.GetAsync($"/api/GSDean/GetEvaluationForTA/{evaluationPeriodId}/{TAEmployeeId}");

            if (response.IsSuccessStatusCode)
            {
                var evaluationData = await response.Content.ReadFromJsonAsync<GsdeanEvaluationDto>();

                if (evaluationData != null)
                {
                    // Map API data to mastersData
                    mastersData = new MastersDto
                    {
                        Major = evaluationData.ProgramName,
                        HoursGained = evaluationData.CompletedHours,
                        Grade = evaluationData.Gpa,
                        EstimatedGraduationDate = evaluationData.ExpectedCompletionDate,
                        //GradeGivenbySupervisor = evaluationData.ProgressScore ?? 0,
                        //mock data for testing
                        Status = evaluationData.EvaluationComments,
                        ResearchPointsCompleted = evaluationData.TopicChosen,
                        SearchInResources = evaluationData.LiteratureReview,
                        SearchPlanning = evaluationData.ResearchPlan,
                        CollectDataAndAnalyze = evaluationData.DataCollection,
                        ResearchReportWriting = evaluationData.Writing,
                        ScientificResearchReport = evaluationData.ThesisDefense
                    };

                    Console.WriteLine("✅ Data loaded successfully from API");
                }
                else
                {
                    errorMessage = "لم يتم العثور على بيانات التقييم";
                }
            }
            else if (response.StatusCode == System.Net.HttpStatusCode.NotFound)
            {
                // No data found - initialize with empty data
                Console.WriteLine("No evaluation data found - initializing empty form");
                mastersData = new MastersDto
                {
                    Major = "",
                    HoursGained = 0,
                    Grade = 0,
                    EstimatedGraduationDate = DateOnly.FromDateTime(DateTime.Now),
                    ResearchPointsCompleted = false,
                    SearchInResources = false,
                    SearchPlanning = false,
                    CollectDataAndAnalyze = false,
                    ResearchReportWriting = false,
                    ScientificResearchReport = false
                };
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"خطأ في تحميل البيانات: {response.StatusCode} - {errorContent}";
            }

            // Initialize research papers and activities if not loaded from parameters
            if (researchPapers == null || !researchPapers.Any())
            {
                researchPapers = new List<ResearchPaperDto>();
            }

            if (otherActivities == null)
            {
                otherActivities = new OtherActivitiesDto();
            }
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"خطأ في الاتصال بالخادم: {httpEx.Message}";
            Console.WriteLine($"HTTP Error: {httpEx}");
        }
        catch (Exception ex)
        {
            errorMessage = $"حدث خطأ أثناء تحميل البيانات: {ex.Message}";
            Console.WriteLine($"Error loading data: {ex}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void AddNewPaper()
    {
        Console.WriteLine("AddNewPaper method called!");
        isEditMode = false;
        currentPaper = new ResearchPaperDto
        {
            Date = DateOnly.FromDateTime(DateTime.Now),
            Title = "",
            ConferenceOrJournal = "",
            Location = "",
            Status = 1
        };
        showModal = true;
        StateHasChanged();
    }

    private void EditPaper(int id)
    {
        isEditMode = true;
        var paper = researchPapers.FirstOrDefault(p => p.Id == id);
        if (paper != null)
        {
            currentPaper = new ResearchPaperDto
            {
                Id = paper.Id,
                Title = paper.Title,
                ConferenceOrJournal = paper.ConferenceOrJournal,
                Location = paper.Location,
                PageCount = paper.PageCount,
                Date = paper.Date,
                Status = paper.Status,
                Url = paper.Url
            };
            showModal = true;
            StateHasChanged();
        }
    }
    private async Task UpdateOtherActivity(string propertyName, ChangeEventArgs e)
    {
        bool isChecked = (bool)(e.Value ?? false);

        switch (propertyName)
        {
            case nameof(otherActivities.HasTechnicalReportsOrArticles):
                otherActivities.HasTechnicalReportsOrArticles = isChecked;
                break;
            case nameof(otherActivities.HasGivenLecturesOrSeminars):
                otherActivities.HasGivenLecturesOrSeminars = isChecked;
                break;
            case nameof(otherActivities.HasAttendedScientificSeminars):
                otherActivities.HasAttendedScientificSeminars = isChecked;
                break;
        }

        Console.WriteLine($"✅ Other Activity Updated: {propertyName} = {isChecked}");
        Console.WriteLine($"  - HasTechnicalReportsOrArticles: {otherActivities.HasTechnicalReportsOrArticles}");
        Console.WriteLine($"  - HasGivenLecturesOrSeminars: {otherActivities.HasGivenLecturesOrSeminars}");
        Console.WriteLine($"  - HasAttendedScientificSeminars: {otherActivities.HasAttendedScientificSeminars}");

        await SendDataToParent();
        StateHasChanged();
    }
    private async Task DeletePaper(int id)
    {
        var paper = researchPapers.FirstOrDefault(p => p.Id == id);
        if (paper != null)
        {
            researchPapers.Remove(paper);
            await SendDataToParent();
            StateHasChanged();
        }
    }

    private async Task SavePaper()
    {
        if (isEditMode)
        {
            var existingPaper = researchPapers.FirstOrDefault(p => p.Id == currentPaper.Id);
            if (existingPaper != null)
            {
                existingPaper.Title = currentPaper.Title;
                existingPaper.ConferenceOrJournal = currentPaper.ConferenceOrJournal;
                existingPaper.Location = currentPaper.Location;
                existingPaper.PageCount = currentPaper.PageCount;
                existingPaper.Date = currentPaper.Date;
                existingPaper.Status = currentPaper.Status;
                existingPaper.Url = currentPaper.Url;
            }
        }
        else
        {
            currentPaper.Id = nextId++;
            researchPapers.Add(currentPaper);
        }

        await SendDataToParent();
        CloseModal();
    }

    private void CloseModal()
    {
        showModal = false;
        currentPaper = new ResearchPaperDto();
        StateHasChanged();
    }

    private string GetStatusBadgeClass(int status)
    {
        return status switch
        {
            1 => "bg-success",
            2 => "bg-warning text-dark",
            3 => "bg-info",
            4 => "bg-danger",
            0 => "bg-secondary",
            _ => "bg-secondary text-white"
        };
    }

    private async Task SendDataToParent()
    {
        if (OnResearchPapersLoaded.HasDelegate)
        {
            await OnResearchPapersLoaded.InvokeAsync(researchPapers);
        }

        if (OnOtherActivitiesLoaded.HasDelegate)
        {
            await OnOtherActivitiesLoaded.InvokeAsync(otherActivities);
        }
    }

    private string GetStatusName(int status)
    {
        return status switch
        {
            1 => "منشور",
            2 => "قيد المراجعة",
            3 => "مقبول",
            4 => "مرفوض",
            0 => "غير محدد",
            _ => "حالة غير معروفة"
        };
    }
}